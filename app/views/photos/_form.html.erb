<div class="form">
  <h1 class="h1-form">Submit Photo for Rating</h1>
<%= form_for @photo do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
      <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-wrap">
    <label><%= f.file_field :photo_url %></label>
  </div>
  <div class="field-wrap">
    <label><%= f.text_area :description, placeholder:"Description" %></label>
  </div>
  <div>
    <%= f.submit "Upload", class:"button button-block"%>
  </div>
<% end %>
</div>
