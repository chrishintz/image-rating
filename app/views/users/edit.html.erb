<div class="form">
  <h1 class="h1-form">Update your profile</h1>

  <div class="field-wrap">
    <%= form_for(@user) do |f| %>
      <%= f.label :username, class: "white-label" %>
      <%= f.text_field :username %>
  </div>
  <div class="field-wrap">
    <%= f.label :email, class: "white-label" %>
    <%= f.email_field :email %>
  </div>
    <%= f.submit "Save changes", class: "button button-block" %>
  <% end %>
</div>

<div>
  <%= gravatar_for "#{@user.email}" %>
  <a href="https://en.gravatar.com/emails" target="_blank">change</a>
</div>
